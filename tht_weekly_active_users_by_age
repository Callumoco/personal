-- Creates a list of date weeks with the total number of activated users and active users for that week
-- Partitioned by the users age bracket (18-23, 24-27, 28-33 and 34+)


-- Removes declines and extracts just the date from the timestamp
WITH transactions AS(
  SELECT
  DATE(timestamp) AS transaction_date,
  user_id
  
  FROM `analytics-take-home-test.monzo_product.transactions`
  
  WHERE amount IS NOT NULL
),

-- Counts the number of transactions made by the user for each distinct day they made a transaction
 count_transactions AS (
  SELECT DISTINCT
  transaction_date,
  user_id,
  COUNT(*) OVER (PARTITION BY transaction_date, user_id) AS num_of_transactions

  FROM transactions
 ),

 -- List of all users
users AS (
  SELECT
  user_id,
  DATE(account_activation) AS account_activation,
  age

  FROM `analytics-take-home-test.monzo_product.users`
),

-- Generate a list of dates from the first date that appears in the users table (2016-01-22) to the last (2018-06-15)
-- Instead of specifying an end date, you'd use CURRENT_DATE() for ongoing monitoring
date_array AS(
    SELECT
    array_date

    FROM UNNEST(
      GENERATE_DATE_ARRAY(
        "2016-01-22",
        "2018-06-15",
        INTERVAL 1 day
      )
    ) AS array_date
),

-- For every date in the date array, list all users
 gapless_grid AS (
  SELECT DISTINCT
  d.array_date,
  u.user_id,

  FROM date_array AS d
  CROSS JOIN users AS u

  WHERE u.account_activation <= d.array_date
),

-- List of dates and all users with the number of transactions they made on that date.
 daily_transactions AS (
  SELECT
  gg.array_date,
  gg.user_id,

  c.num_of_transactions

  FROM gapless_grid AS gg

  LEFT JOIN count_transactions AS c ON (gg.user_id = c.user_id AND gg.array_date = c.transaction_date)
 ),

-- List of dates and all users with the number of transactions they made in the last week of that date
weekly_transactions AS (
  SELECT
  array_date,
  user_id,

  SUM(COALESCE(num_of_transactions, 0)) OVER (PARTITION BY user_id ORDER BY array_date ROWS BETWEEN 6 PRECEDING AND CURRENT ROW) AS sum_weekly_transactions,

  FROM daily_transactions
),








-- List of date weeks (week commencing Sunday) and the number of active users that fall within that week
-- Active user is defined as a user who has made a successful transaction within the last 7 days of that week.
weekly_active_users_a0 AS (
  SELECT 
  FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))) AS date_week,
  COUNT(DISTINCT IF(sum_weekly_transactions > 0, user_id, NULL)) AS weekly_active_users_a0

  FROM weekly_transactions As weekly
  LEFT JOIN users AS users USING (user_id)

  WHERE users.age <= 23
  
  GROUP BY date_week
),

-- List of date weeks and the number of accounts activated that week
-- That also have a user age of less than or equal to 23 (logic is repeated for 24-27, 28-33 and 34+)
weekly_activations_a0 AS(
  SELECT DISTINCT
  FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))) AS date_week,
  COUNT(DISTINCT user_id) OVER (week_window) AS accounts_activated_weekly_a0
  
  FROM date_array
  LEFT JOIN `analytics-take-home-test.monzo_product.users` AS users ON (array_date = DATE(account_activation))

  WHERE users.age <= 23
  
  WINDOW
  week_window AS (PARTITION BY FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))))
),

weekly_active_users_a1 AS (
  SELECT 
  FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))) AS date_week,
  COUNT(DISTINCT IF(sum_weekly_transactions > 0, user_id, NULL)) AS weekly_active_users_a1

  FROM weekly_transactions As weekly
  LEFT JOIN users AS users USING (user_id)

  WHERE users.age >= 24 AND users.age <= 27
  
  GROUP BY date_week
),

weekly_activations_a1 AS(
  SELECT DISTINCT
  FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))) AS date_week,
  COUNT(DISTINCT user_id) OVER (week_window) AS accounts_activated_weekly_a1
  
  FROM date_array
  LEFT JOIN `analytics-take-home-test.monzo_product.users` AS users ON (array_date = DATE(account_activation))
  
  WHERE users.age >= 24 AND users.age <= 27
  
  WINDOW
  week_window AS (PARTITION BY FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))))
),

weekly_active_users_a2 AS (
  SELECT 
  FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))) AS date_week,
  COUNT(DISTINCT IF(sum_weekly_transactions > 0, user_id, NULL)) AS weekly_active_users_a2

  FROM weekly_transactions As weekly
  LEFT JOIN users AS users USING (user_id)

  WHERE users.age >= 28 AND users.age <= 33
  
  GROUP BY date_week
),

weekly_activations_a2 AS(
  SELECT DISTINCT
  FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))) AS date_week,
  COUNT(DISTINCT user_id) OVER (week_window) AS accounts_activated_weekly_a2
  
  FROM date_array
  LEFT JOIN `analytics-take-home-test.monzo_product.users` AS users ON (array_date = DATE(account_activation))

  WHERE users.age >= 28 AND users.age <= 33
  
  WINDOW
  week_window AS (PARTITION BY FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))))
),

weekly_active_users_a3 AS (
  SELECT 
  FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))) AS date_week,
  COUNT(DISTINCT IF(sum_weekly_transactions > 0, user_id, NULL)) AS weekly_active_users_a3

  FROM weekly_transactions As weekly
  LEFT JOIN users AS users USING (user_id)

  WHERE users.age >= 34
  
  GROUP BY date_week
),

weekly_activations_a3 AS(
  SELECT DISTINCT
  FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))) AS date_week,
  COUNT(DISTINCT user_id) OVER (week_window) AS accounts_activated_weekly_a3
  
  FROM date_array
  LEFT JOIN `analytics-take-home-test.monzo_product.users` AS users ON (array_date = DATE(account_activation))

  WHERE users.age >= 34
  
  WINDOW
  week_window AS (PARTITION BY FORMAT_TIMESTAMP('%F', TIMESTAMP_TRUNC(array_date, WEEK(SUNDAY))))
),

-- Running total of account activations by week
weekly_activations_running AS (
  SELECT
  date_week,
  SUM(accounts_activated_weekly_a0) OVER (ORDER BY date_week) AS accounts_activated_a0,
  SUM(accounts_activated_weekly_a1) OVER (ORDER BY date_week) AS accounts_activated_a1,
  SUM(accounts_activated_weekly_a2) OVER (ORDER BY date_week) AS accounts_activated_a2,
  SUM(accounts_activated_weekly_a3) OVER (ORDER BY date_week) AS accounts_activated_a3

FROM weekly_activations_a0
LEFT JOIN weekly_activations_a1 USING (date_week)
LEFT JOIN weekly_activations_a2 USING (date_week)
LEFT JOIN weekly_activations_a3 USING (date_week)
),

-- List of date weeks and the proportion of active users in that week
weekly_active_user_rate_age AS(
SELECT
wau0.date_week,

-- Stats on users that are aged 18-23
wau0.weekly_active_users_a0,
war.accounts_activated_a0,
SAFE_DIVIDE(wau0.weekly_active_users_a0, war.accounts_activated_a0) AS weekly_active_rate_18_to_23,

-- Stats on users that are aged 24-27
wau1.weekly_active_users_a1,
war.accounts_activated_a1,
SAFE_DIVIDE(wau1.weekly_active_users_a1, war.accounts_activated_a1) AS weekly_active_rate_24_to_27,

-- Stats on users that are aged 28-33
wau2.weekly_active_users_a2,
war.accounts_activated_a2,
SAFE_DIVIDE(wau2.weekly_active_users_a2, war.accounts_activated_a2) AS weekly_active_rate_28_to_33,

-- Stats on users that are aged 34 or over
wau3.weekly_active_users_a3,
war.accounts_activated_a3,
SAFE_DIVIDE(wau3.weekly_active_users_a3, war.accounts_activated_a3) AS weekly_active_rate_34_plus,


FROM weekly_active_users_a0 AS wau0
LEFT JOIN weekly_active_users_a1 AS wau1 USING (date_week)
LEFT JOIN weekly_active_users_a2 AS wau2 USING (date_week)
LEFT JOIN weekly_active_users_a3 AS wau3 USING (date_week)

LEFT JOIN weekly_activations_running AS war USING (date_week) 
)


SELECT * 

FROM weekly_active_user_rate_age

ORDER BY date_week ASC
